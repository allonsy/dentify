  svg
    width: 75px
    height: 75px

  .st0
    fill: #333

  &.booked
    .marker
      background-color: $booked-color
      &:after
        border-top-color: $booked-color

  &.available
    .marker
      background-color: $available-color
      &:after
        border-top-color: $available-color

  &.checked-in
    .marker
      background-color: $checkedin-color
      &:after
        border-top-color: $checkedin-color

  .marker
    width: $size
    height: $size
    background: red
    border-radius: $size
    position: absolute
    margin: -125px -36px
    border: ($size / 20) solid #333

    svg
      position: relative
      z-index: 1

    &:before, &:after
      content: ''
      position: absolute
      top: ($size * .5)

     &:after
       $border-size = .48
       border: ($size * $border-size) solid transparent
       margin: ($size * .15) ($size * $border-size * -1)
       border-top-width: ($size * .95)
       border-radius: 5px

      &:before
        $border-size = .51
        border: ($size * $border-size) solid transparent
        margin: ($size * .2) ($size * $border-size * -1)
        border-top: $size solid #333
        z-index: -1
        left: 51.4%
