$size = 75px
$booked-color = #FF730D
$available-color = #00CF15
$checkedin-color = #E80C18

.c-room
  display: inline-block
  transition: transform 3s ease
  text-align: center
  text-transform: uppercase
  position: relative
  background-color: #999
  border-right: 5px solid black

  width: 200px
  height: 200px

  pointer-events: none

  .room-no
    color: #333
    bottom: 10%
    position: absolute
    width: 100%
    font-size: 30px
    text-transform: capitalize

  &.focused
    pointer-events: auto
    &:hover
      background-color: #777

  &.selected
    background-color: #777

  .door-label
    transform: rotateX(-90deg)
    transition: transform 3s ease
    left: 50%
    top: 50%
    position: absolute
    pointer-events: none
    z-index: 1

    &.selected
      transition: transform 3s ease
      transform: translateZ(30px) rotateX(-90deg)
