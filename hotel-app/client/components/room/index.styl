.c-room
  display: inline-block
  border: 5px solid #000
  transition: transform 3s ease
  text-align: center
  text-transform: uppercase
  position: relative
  background-color: #999

  width: 300px
  height: 200px

  // 3d stuff
  // transform-origin: 0% 100%
  // transform: rotateX(-45deg)

  .top, .bottom
    pointer-events: none

  .door-label
    transform: rotateX(-90deg) rotateY(-45deg)
    transition: transform 3s ease
    pointer-events: none

  svg
    width: 75px
    height: 75px
    border-radius: 50%
    border: 3px solid white

  .st0
    fill: white

  &.booked
    svg
      background-color: #E80C18

  &.available
    svg
      background-color: #00CF15

  &.checked-in
    svg
      background-color: #FF730D

  &:hover
    background-color: #777
